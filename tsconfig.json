{
	"compilerOptions": {
		"declaration": true,
		"declarationDir": "./dist",
		"esModuleInterop": true,
		"module": "es6",
		"allowJs": true,
		"noImplicitAny": true,
		"outDir": "./dist",
		"target": "es2015"
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules",
		"dist",
		"src/__tests__/**/*.spec.ts"
	]
}
